<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_wallet_item_selected"
        android:orientation="vertical">

        <include
            android:id="@+id/include_action_bar"
            layout="@layout/layout_action_bar" />


        <com.ocpay.wallet.widget.swipelistview.SwipeListView
            android:id="@+id/slv_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none" />
        <include
            android:id="@+id/include_no_record"
            layout="@layout/include_no_record"/>

    </LinearLayout>
</layout>