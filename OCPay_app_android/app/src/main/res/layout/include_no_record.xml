<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/rl_null_record"
        android:background="@color/color_wallet_item_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_null_record"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_no_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_null_record"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="@string/tip_no_records"
            android:textColor="#A4AFB4"
            android:textSize="18sp" />
    </RelativeLayout>
</layout>
