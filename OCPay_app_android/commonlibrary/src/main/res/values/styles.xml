<resources>


    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/toolbarItemBackground</item>
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <style name="titlestyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="XTabLayout_Default_Style" parent="Base.Widget.Design.TabLayout">
        <item name="x_tabMaxWidth">264dp</item>
        <item name="x_tabIndicatorColor">?attr/colorAccent</item>
        <item name="x_tabIndicatorHeight">2dp</item>
        <item name="x_tabPaddingStart">12dp</item>
        <item name="x_tabPaddingEnd">12dp</item>
        <item name="x_tabBackground">?attr/selectableItemBackground</item>
        <item name="x_tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="x_tabSelectedTextColor">?android:textColorPrimary</item>

        <item name="x_tabGravity">fill</item>
        <item name="x_tabMode">fixed</item>

    </style>


</resources>
